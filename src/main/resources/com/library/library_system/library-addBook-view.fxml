<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.library_system.LibraryAddBookController">
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Label text="Add Book">
                <font>
                    <Font size="36.0" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" prefHeight="90.0">
                <Label prefWidth="90.0" text="Book Title">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <TextField id="tfTitle" fx:id="tfBookTitle" prefWidth="149.0" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="90.0">
                <Label prefWidth="90.0" text="Author">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <TextField id="tfAuthor" fx:id="tfAuthor" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="90.0">
                <Label prefWidth="90.0" text="ISBN">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <TextField id="tfISBN" fx:id="tfISBN" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="90.0">
                <Label prefWidth="90.0" text="Publication Date">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <DatePicker id="tfDate" fx:id="dpDate" prefWidth="150.0" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="90.0">
                <Label prefWidth="90.0" text="Pages">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <TextField id="tfPages" fx:id="tfPages" />
            </HBox>
            <HBox alignment="CENTER">
                <HBox alignment="TOP_RIGHT" prefHeight="16.0" prefWidth="242.0">
                    <Button id="btnAdd" mnemonicParsing="false" onAction="#onClickAdd" text="Add" />
                </HBox>
            </HBox>
        </VBox>
    </center>
   <bottom>
      <Label fx:id="lbStatus" text=" " BorderPane.alignment="CENTER_LEFT" />
   </bottom>
</BorderPane>
